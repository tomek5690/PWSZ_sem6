<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="320.0" prefWidth="345.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <TextField fx:id="valueTextField" layoutX="107.0" layoutY="34.0" />
        <Label layoutX="60.0" layoutY="39.0" text="Value" />
        <Label layoutX="34.0" layoutY="112.0" text="Convert from:" />
        <Label layoutX="191.0" layoutY="112.0" text="Convert to:" />
        <RadioButton fx:id="celciusFrom" layoutX="34.0" layoutY="139.0" mnemonicParsing="false" text="Celcius">
         <toggleGroup>
            <ToggleGroup fx:id="from" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="fahrenheitFrom" layoutX="34.0" layoutY="160.0" mnemonicParsing="false" text="Fahrenheit" toggleGroup="$from" />
        <RadioButton fx:id="kelvinFrom" accessibleRole="RADIO_MENU_ITEM" layoutX="34.0" layoutY="181.0" mnemonicParsing="false" text="Kelvin" toggleGroup="$from" />
        <RadioButton fx:id="celciusTo" layoutX="191.0" layoutY="139.0" mnemonicParsing="false" text="Celcius">
         <toggleGroup>
            <ToggleGroup fx:id="to" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="kelvinTo" layoutX="191.0" layoutY="181.0" mnemonicParsing="false" text="Kelvin" toggleGroup="$to" />
        <RadioButton fx:id="fahrenheitTo" layoutX="191.0" layoutY="160.0" mnemonicParsing="false" text="Fahrenheit" toggleGroup="$to" />
        <Label layoutX="55.0" layoutY="259.0" text="Output" />
        <TextField fx:id="output" editable="false" layoutX="107.0" layoutY="254.0" prefHeight="31.0" prefWidth="168.0" />
    </children>
</AnchorPane>
